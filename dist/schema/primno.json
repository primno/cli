                "name": {
                    "type": "string"
                },
                "version": {
                    "type": "string"
                },
                "sourceRoot": {
                    "type": "string"
                },
                "entryPointDir": {
                    "type": "string"
                },
                "distDir": {
                    "type": "string"
                },
                "serve": {
                    "$ref": "#/definitions/Serve"
                },
                "build": {
                    "$ref": "#/definitions/Build"
                },
                "environment": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Environment"
                    }
                }
            },
            "required": [
                "build",
                "distDir",
                "entryPointDir",
                "environment",
                "name",
                "serve",
                "sourceRoot",
                "version"
