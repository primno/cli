---
to: tsconfig.json
---
{
    "compilerOptions": {
      "target": "ES6",
      "module": "esnext",
      "moduleResolution": "Node",
      "esModuleInterop": true,
      "strict": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": [
      "src"
    ]
}